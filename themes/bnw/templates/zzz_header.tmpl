## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*"/>

<%def name="html_header()">

    <header id="header" class="navbar">
        <div class="container">
            ${html_site_title()}
            ${html_navigation_links()}
        </div>
    </header>
    <div class="header-padding"> </div>
</%def>


<%def name="html_site_title()">
    <div class="brand">
        %if logo_url:
        <div class="logo">
            <a href="${abs_link('/')}" title="${blog_title}" rel="home">
                <img src="${logo_url}" alt="${blog_title}" id="logo">
            </a>
        </div>
        <img src="${logo_url}" alt="${blog_title}" id="logo">
        %endif

        %if show_blog_title:
        <div class="brand-text">
            <a href="${abs_link('/')}" title="${blog_title}" rel="home">
                ${blog_title}
            </a>
        </div>
        %endif

        <a id="btn-toggle-nav" class="navbar-toggle">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
    </div>
</%def>

<%def name="html_site_tagline()">
    %if show_blog_title and blog_description:
    <div class="tagline">
        <div class="container">
        ${blog_description}
        </div>
    </div>
    %endif
</%def>

<%def name="html_navigation_links()">
    <nav class="navbar-collapse collapse">
    <ul class="nav">
    %for url, text in navigation_links[lang]:
        % if isinstance(url, tuple):
            <!-- sub navigation not supported yet -->
        % else:
            % if rel_link(permalink, url) == "#":
                <li class="active"><a href="${permalink}">${text}</a></li>
            %else:
                <li><a href="${url}">${text}</a></li>
            %endif
        % endif
    %endfor
    ${template_hooks['menu']()}
    ${template_hooks['menu_alt']()}
    </ul>
    </nav>
</%def>
